<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/stylesheets/StudentLanding.css">
</head>
<body>
    <!-- Navbar -->
    <div class="navbar">
        <div>Student Dashboard</div>
        <div>
            <a href="#">Profile</a>
            <a class="logoutbtn" href="/student/login">Logout</a>
        </div>
    </div>

    <!-- Welcome Section -->
    <section class="welcome-section">
        <h1>Welcome, <%= studentName %>!</h1>
        <p>Your personalized dashboard to manage everything at your fingertips.</p>
    </section>

    <!-- Dashboard Features -->
    <section class="dashboard-cards">
        <!-- Card 1 -->
        <div class="card">
            <h5>Project Approval</h5>
            <p>Access and manage your enrolled courses.</p>
            <a href="/student/Approval">View Project Approval</a>
        </div>
        
        <!-- Card 2 -->
        <div class="card">
            <h5>Schedule</h5>
            <p>Stay organized with your class schedule.</p>
            <a href="#">View Schedule</a>
        </div>

        <!-- Card 3 -->
        <div class="card">
            <h5>Notifications</h5>
            <p>Stay updated with the latest announcements.</p>
            <a href="/student/notification">View Notifications</a>
        </div>

        <!-- Card 4 -->
        <div class="card">
            <h5>Support</h5>
            <p>Need help? Contact the admin team.</p>
            <a href="#">Get Support</a>
        </div>
    </section>
    <script src="/javascripts/StudentLanding.js"></script>
</body>
</html>