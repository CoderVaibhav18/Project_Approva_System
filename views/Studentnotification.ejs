<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project Notifications</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f9;
      }

      header {
        background-color: #4caf50;
        color: white;
        padding: 1rem 2rem;
        text-align: center;
      }

      main {
        padding: 2rem;
      }

      .notifications {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .notification-card {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 1rem;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .notification-card h2 {
        margin: 0;
        font-size: 1.25rem;
      }

      .notification-card p {
        margin: 0.5rem 0;
      }

      .status {
        font-weight: bold;
      }

      .approved {
        border-left: 5px solid #4caf50;
      }

      .approved .status {
        color: #4caf50;
      }

      .rejected {
        border-left: 5px solid #f44336;
      }

      .rejected .status {
        color: #f44336;
      }

      .pending {
        border-left: 5px solid #ff9800;
      }

      .pending .status {
        color: #ff9800;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>Project Notifications</h1>
    </header>
    <main>
      <section class="notifications">
        <!-- Example Notification Card -->
        <div class="notification-card approved">
          <h2>Project: Green DIY Platform</h2>
          <p>Status: <span class="status">Approved</span></p>
        </div>

        <div class="notification-card rejected">
          <h2>Project: Plastic Bottle Art</h2>
          <p>Status: <span class="status">Rejected</span></p>
        </div>

        <div class="notification-card pending">
          <h2>Project: Glass Jar Lanterns</h2>
          <p>Status: <span class="status">Pending</span></p>
        </div>
      </section>
    </main>
  </body>
</html>
