<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HOD Approval</title>
    <link rel="stylesheet" href="/stylesheets/HodApproval.css">
  </head>
  <body>
    <div class="container">
      <h1>Mini Project Approval</h1>
      <table>
        <thead>
          <tr>
            <th>Team ID</th>
            <th>Project Title</th>
            <th>Team Members</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% allProjects.forEach((element, idx) => { %>
          <tr>
            <td><%= idx + 1 %></td>
            <td><%= element.ProjectTitle %></td>
            <td>
              <div class="members">
                <% element.groupMembers.forEach((member) => { %>
                <span><%= member %></span>
                <% }); %>
              </div>
            </td>
            <td>
              <button
                class="view-btn"
                onclick="showDescription('<%= element.ProjectTitle %>', '<%= element.description %>')"
              >
                View
              </button>
              <button
                class="approve-btn"
                onclick="updateStatus('<%= element._id %>', 'approved')"
              >
                Approve
              </button>
              <button
                class="reject-btn"
                onclick="updateStatus('<%= element._id %>', 'rejected')"
              >
                Reject
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Modal -->
    <div id="description-modal" class="modal">
      <div class="modal-content">
        <span class="close-btn" onclick="closeModal()">Close</span>
        <div class="modal-header" id="modal-title"></div>
        <div class="modal-body" id="modal-description"></div>
      </div>
    </div>
    <script src="/javascripts/HodApproval.js"></script>
  </body>
</html>
